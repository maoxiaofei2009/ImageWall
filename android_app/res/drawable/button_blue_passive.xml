<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/button_blue_shadow" />

            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item android:bottom="@dimen/button_stroke_bottom_height">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="@color/button_blue_light"
                android:startColor="@color/button_blue_dark" />

            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>

</layer-list>